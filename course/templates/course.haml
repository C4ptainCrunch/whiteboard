{% extends "box.haml" %}
{% block additional_class %}course{% endblock %}

{% block header %}
    .name= course.name
    .mnemonic= course.mnemonic
{% endblock %}

{% block content %}
    .teacher
        Cours donn√© par 
        %a{'href': 'mailto:{{course.teacher}}'}= course.teacher
    .description
        :markdown
            {{course.description}}
    %ul.discussions
        -for thread in discussions
            %li
                %a{'href': '{{thread.canonic_url}}'}= thread.name
{% endblock %}

{% block footer %}
    %a{'href':'{{course.canonic_url}}/add/thread'} Commencer une discussion...
{% endblock %}