{% extends "layout.haml" %}

{% block content %}
    .thread{'data-id': '{{thread.pk}}'}
        .subject= thread.name
        .keywords
            - for kw in keywords
                %a.kwref{'href': '/keywords/{{kw.pk}}/related'}= kw.name
        .content
            - for message in message_list
                {% include "message.haml" %}
{% endblock %}